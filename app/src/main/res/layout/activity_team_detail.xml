<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".TeamDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingStart="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/abc_vector_test"
            android:focusable="true"
            tools:ignore="RtlSymmetry"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/team_name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textFontWeight="2"
            android:textSize="40sp"
            android:paddingBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="250dp"
            app:cardElevation="50dp"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/logoTeam"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cityTeamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_title"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/teamCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/conferenceTeamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conference_title"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/conferenceTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/descriptionTeamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_title"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/descriptionTeam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            tools:ignore="TextViewEdits" />


    </LinearLayout>

</ScrollView>