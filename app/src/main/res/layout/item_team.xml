<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="br.com.aisdigital.androidchallenge.domain.model.teams.Conference" />

        <variable
            name="item"
            type="br.com.aisdigital.androidchallenge.domain.model.teams.TeamsResponse" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="@dimen/size_spacing_xxx_small"
        android:paddingEnd="@dimen/size_spacing_xxx_small"
        android:paddingBottom="@dimen/size_spacing_xxx_small"
        app:cardCornerRadius="@dimen/size_radius_xxx_small"
        app:cardElevation="@dimen/size_elevation_xx_small"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageTeam"
                android:layout_width="@dimen/size_image_width"
                android:layout_height="@dimen/size_image_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_spacing_x_small"
                android:scaleType="centerInside"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_spacing_x_small">

                <TextView
                    android:id="@+id/textName"
                    style="@style/ItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{item.name}"
                    tools:text="Celtics" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginTop="@dimen/size_spacing_xxx_small"
                    android:layout_marginBottom="@dimen/size_spacing_xxx_small"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/textCity"
                    style="@style/ItemBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_spacing_xxx_small"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="@{item.city}"
                    tools:text="Cidade: Boston" />

                <TextView
                    android:id="@+id/textDescription"
                    style="@style/ItemBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_spacing_xxx_small"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text="@{item.description}"
                    tools:text="@tools:sample/lorem[50]" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/team_conference_image_content_description"
                    android:src="@{item.conference == Conference.EAST ? @drawable/ic_eastern_104 : @drawable/ic_western_104 }" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginTop="@dimen/size_spacing_xxx_small"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>